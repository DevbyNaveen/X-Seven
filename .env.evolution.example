# Evolution API Configuration Example
# Copy this to your .env file and update with your actual values

# Evolution API Settings
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_secure_evolution_api_key_here
EVOLUTION_DEFAULT_WEBHOOK=http://your-domain.com/api/v1/evolution/webhook
EVOLUTION_MAX_INSTANCES_PER_SERVER=500
EVOLUTION_SESSION_TIMEOUT=3600000
EVOLUTION_RATE_LIMIT_PER_INSTANCE=1000
EVOLUTION_WEBHOOK_TIMEOUT=30
EVOLUTION_RETRY_ATTEMPTS=3
EVOLUTION_RETRY_DELAY=5

# Base URL for webhook callbacks
BASE_URL=http://your-domain.com

# Database URL (if using separate Evolution database)
# EVOLUTION_DATABASE_URL=postgresql://evolution:password@localhost/evolution

# Redis URL for Evolution API caching
# EVOLUTION_REDIS_URL=redis://localhost:6379/1

# Additional Evolution API settings
# EVOLUTION_LOG_LEVEL=info
# EVOLUTION_ENABLE_METRICS=true
# EVOLUTION_METRICS_PORT=9090
