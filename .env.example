# Example environment configuration for X-SevenAI (no secrets)

# Database
DATABASE_URL=sqlite:///./db/X-seven.db
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Providers (set only the ones you use)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
GROQ_MODEL=qwen-3-32b


# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# External Services
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
STRIPE_SECRET_KEY=
WHATSAPP_API_KEY=

# App
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=X-SevenAI
VERSION=0.1.0
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
WEBSOCKET_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
